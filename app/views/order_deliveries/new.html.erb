<div class="container">
  <h2 class="text-center">Оформление заказа</h2>
  <div class="order_delivery-box">
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Кол-во</th>
            <th>Сумма</th>
            <th>Действия</th>
          </tr>
          <% current_order.order_items.each do |item| %>
          <tr id="order_<%= item.id %>"><%= render 'order_item',item: item %></tr>
          <% end %>
          <tr>
            <td>Итого:</td>
            <td></td>
            <td></td>
            <td><%= current_order.total_price %></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
    <h3 class="text-center">Информация о доставке</h3>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :order_delivery,url: order_deliveries_path do |f|%>
          <div class="form-group">
            <label for="exampleInputEmail1">Имя</label>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Улица</label>
            <%= f.text_field :street, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Номер дома</label>
            <%= f.text_field :number, class: 'form-control' %>
          </div>
         <div class="form-group">
            <label for="exampleInputPassword1">Квартира</label>
            <%= f.text_field :room, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Телефон</label>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Дополнительная информация</label>
            <%= f.text_area :comment, class: 'form-control' %>
          </div>
          <%= f.submit "Оформить доставку",class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>