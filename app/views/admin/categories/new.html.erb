
 
<div class="form-container">
   <div class="row">
    <div class="col-lg-3">
      <%= simple_form_for @category,url: admin_categories_path, html: {class: 'form-horizontal'} do |f| %>
      <%= f.error_notification %>
      <%= f.input :title %>
      <%= f.input :seo_url %>
      <%= f.input :meta_title,required: false, as: :text %>
      <%= f.input :meta_description,required: false, as: :text %>
      <%= f.input :meta_keywords,required: false, as: :text %>
      <%= f.button :submit, class: 'btn btn-success' %>
      <%end %>

    </div>
  </div>
  
</div>