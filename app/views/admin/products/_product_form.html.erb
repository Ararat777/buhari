<%= simple_form_for product,url: url, html: {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :title %>
    <%= f.input :price,as: :integer %>
    <%= f.input :description,required: false, as: :text %>
    <%= f.input :weight,as: :integer %>
    <%= f.input :size,as: :integer %>
    <%= f.input :category_id,:collection => categories,:label_method => :title,:value_method => :id,:include_blank => false,required: false %>
    <% if product.thumb? %>
    <%= image_tag product.thumb, width: '70' %>
    <%= link_to 'Change photo',admin_new_product_thumb_path(product),remote: true %>
    <div class="file-input"></div>
    <%else%>
    <%= f.input :thumb,as: :file,required: false %>
    <%end%>
    <%= f.input :active,as: :boolean %>
    <%= f.button :submit, class: 'btn btn-success' %>
<%end %>
